reddit:
  enabled: true
  # Option 1: Simple list (maintains backward compatibility)
  subreddits:
    - SUBREDDIT
    - ANOTHER_SUBREDDIT
  # Option 2: Categorized format
  categories:
    news:
      - worldnews
      - politics
      - technology
    entertainment:
      - movies
      - gaming
      - music
    programming:
      - python
      - learnprogramming
  # Option 3: Karma filtering (works with both simple and categorized formats)
  # Set minimum karma thresholds for specific subreddits
  karma_filters:
    chicago: 50  # Only include posts with 50+ karma from r/chicago
    worldnews: 100  # Only include posts with 100+ karma from r/worldnews
  client_id: YOUR_CLIENT_ID
  client_secret: YOUR_CLIENT_SECRET
  user_agent: YOUR_USER_AGENT

